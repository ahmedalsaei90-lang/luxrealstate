# Elite Properties Kuwait - Environment Variables
# Copy this file to .env.local and fill in your values

# =============================================================================
# Application Configuration
# =============================================================================

# Next.js Public URL (used for absolute URLs in production)
# NEXT_PUBLIC_APP_URL=https://your-domain.com

# =============================================================================
# Database Configuration (Future Integration)
# =============================================================================

# Database connection string (PostgreSQL, MySQL, etc.)
# DATABASE_URL=

# Database connection pool settings
# DATABASE_POOL_MIN=2
# DATABASE_POOL_MAX=10

# =============================================================================
# Authentication (Future Integration)
# =============================================================================

# NextAuth.js configuration
# NEXTAUTH_URL=http://localhost:3015
# NEXTAUTH_SECRET=

# OAuth Providers (Google, Facebook, etc.)
# GOOGLE_CLIENT_ID=
# GOOGLE_CLIENT_SECRET=
# FACEBOOK_CLIENT_ID=
# FACEBOOK_CLIENT_SECRET=

# =============================================================================
# Email Service (Future Integration)
# =============================================================================

# SMTP Configuration for sending inquiry emails
# SMTP_HOST=
# SMTP_PORT=587
# SMTP_USER=
# SMTP_PASSWORD=
# SMTP_FROM_EMAIL=
# SMTP_FROM_NAME=Elite Properties Kuwait

# SendGrid API Key (alternative to SMTP)
# SENDGRID_API_KEY=

# =============================================================================
# WhatsApp Business API (Future Integration)
# =============================================================================

# WhatsApp Business API credentials
# WHATSAPP_BUSINESS_ACCOUNT_ID=
# WHATSAPP_ACCESS_TOKEN=
# WHATSAPP_PHONE_NUMBER_ID=

# Default WhatsApp number for property inquiries
# Currently hardcoded in components, but can be moved here
# NEXT_PUBLIC_WHATSAPP_NUMBER=+96512345678

# =============================================================================
# Google Maps API (Future Integration)
# =============================================================================

# Google Maps API key for property location maps
# NEXT_PUBLIC_GOOGLE_MAPS_API_KEY=

# =============================================================================
# Image Storage & CDN (Future Integration)
# =============================================================================

# AWS S3 Configuration
# AWS_ACCESS_KEY_ID=
# AWS_SECRET_ACCESS_KEY=
# AWS_REGION=
# AWS_S3_BUCKET=

# Cloudinary Configuration (alternative)
# NEXT_PUBLIC_CLOUDINARY_CLOUD_NAME=
# CLOUDINARY_API_KEY=
# CLOUDINARY_API_SECRET=

# =============================================================================
# Analytics & Monitoring (Future Integration)
# =============================================================================

# Google Analytics
# NEXT_PUBLIC_GA_MEASUREMENT_ID=

# Sentry for error tracking
# NEXT_PUBLIC_SENTRY_DSN=
# SENTRY_AUTH_TOKEN=

# =============================================================================
# Payment Integration (Future - for premium listings)
# =============================================================================

# Stripe Configuration
# NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=
# STRIPE_SECRET_KEY=
# STRIPE_WEBHOOK_SECRET=

# =============================================================================
# Development Settings
# =============================================================================

# Enable debug mode
# DEBUG=false

# API Rate Limiting
# API_RATE_LIMIT=100
# API_RATE_WINDOW=15m

# =============================================================================
# Notes
# =============================================================================
# - Variables prefixed with NEXT_PUBLIC_ are exposed to the browser
# - Never commit .env.local or .env with real credentials to version control
# - Use .env.example to document required environment variables
# - For production deployment, set these in your hosting platform's dashboard
